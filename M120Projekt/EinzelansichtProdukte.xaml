        <Grid x:Name="Platzhalter" HorizontalAlignment="Left" Height="279" Margin="10,133,0,0" VerticalAlignment="Top" Width="752"/>
        <StackPanel x:Name="stckNeu" HorizontalAlignment="Left" Height="75" Margin="10,169,0,0" VerticalAlignment="Top" Width="775">
            <Label Content="Produkterfassung starten" HorizontalContentAlignment="Center" FontWeight="Bold"/>
            <Button x:Name="lblErfassen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="lblErfassen_Click" Margin="344,2,0,0" FontWeight="Bold">
